{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                                
    "module": "commonjs",                               
    "rootDir": "src",                                     /* <- código fonte em src */
    "outDir": "dist",                                     /* <- saída do build para dist */
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
